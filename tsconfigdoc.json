{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "types": ["vite/client", "@webgpu/types","wgpu-matrix"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "typedocOptions": {
    "entryPoints": [
      "src/we/**/*.ts"
    ],
    "out": "./doc/dist"
  },
  "include": ["src/we/**/*.ts"]
  // "references": [{ "path": "./tsconfig.node.json" }]
}